<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/dailybmihinh"
        android:layout_width="200dp"
        android:layout_height="350dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/dailybmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="BMI"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/dailybmihinh"
        android:layout_marginTop="70dp"/>
    <TextView
        android:id="@+id/dailybmicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/dailybmihinh"
        android:layout_below="@id/dailybmi"
        android:gravity="center"
        android:text="Hiển thị chiều cao"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/dailybminang"
        android:layout_below="@id/dailybmicao"
        android:layout_toRightOf="@id/dailybmihinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Hiển thị cân nặng"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />






</RelativeLayout>